<% if @dog.errors %>
    <% @dog.errors.full_messages.each do |message| %>
        <p><%= message %></p>
    <% end %>

<% end %>


<h1>Editing <%= @dog.name %></h1>

<form method="POST" action="/dogs/<%= @dog.id %>">
    <input id="hidden" type="hidden" name="_method" value="patch" />
    Name: <input name="name" type="text" value="<%= @dog.name %>">
    <br><br>
    Breed: <input name="breed" type="text" value="<%= @dog.breed%>">
    <br><br>
    Age: <input name="age" type="text" value="<%= @dog.age %>">
    <br><br>
    Spayed/Neutered? <input type="checkbox" name="fixed" checked="<% @dog.fixed %>" >
    <br><br>
    <input type="submit" value="Edit">
</form>


